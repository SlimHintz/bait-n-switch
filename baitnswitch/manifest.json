{
    "name": "Bait-N-Switch",
    "version": "1.0",
    "description": "Filter Click-Bait From Your Browswer!",
    "manifest_version": 2,
    "icons":
    {
      "16": "./images/corn_revealed.png",
      "48": "./images/corn_revealed.png",
      "128": "./images/corn_revealed.png"
    },
    "browser_action":
    {
      "default_icon": "./images/corn_revealed.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "https://baitnswitch.herokuapp.com/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }